<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="3dp"
            app:cardElevation="@dimen/cardview_elevation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/newscard_imageheight"
                    android:scaleType="centerCrop"
                    android:layout_margin="@dimen/card_image_margin"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/happy_doctors_stock" />

                <TextView
                    android:id="@+id/card_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Orthopedic surgery crowned winners in 2019 Hand Hygiene Competition"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView1" />

                <TextView
                    android:id="@+id/card_subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle_top_margin"

                    android:text="Staff will be rewarded with a year's supply of free coffee."
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="@+id/card_title1"
                    app:layout_constraintTop_toBottomOf="@+id/card_title1" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="3dp"
            app:cardElevation="@dimen/cardview_elevation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/newscard_imageheight"
                    android:scaleType="centerCrop"
                    android:layout_margin="@dimen/card_image_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/five_moments" />

                <TextView
                    android:id="@+id/card_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:text="New Hand Hygiene guidance released"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/card_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle_top_margin"

                    android:text="Refining the WHO's 5 moments for the UniSpital Zurich"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="@+id/card_title2"
                    app:layout_constraintTop_toBottomOf="@+id/card_title2" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="3dp"
            app:cardElevation="@dimen/cardview_elevation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/newscard_imageheight"
                    android:layout_margin="@dimen/card_image_margin"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/hh_stock_photo" />

                <TextView
                    android:id="@+id/card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Study finds Hand Hygiene saves lives"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/card_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle_top_margin"

                    android:text="Ministry of Health demands improvements from hospitals."
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="@+id/card_title"
                    app:layout_constraintTop_toBottomOf="@+id/card_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

</LinearLayout>
    </ScrollView>
</FrameLayout>